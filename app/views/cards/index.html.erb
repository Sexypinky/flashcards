<h1>Мои карты в колоде "<%=@card.name%>"</h1>
<% @card.cards.each do |card|%>
  <table class="table table-sm">
    <thead>
    <tr>
      <th scope="col">Текст</th>
      <th scope="col">Переведенный текст</th>
      <th scope="col">Дата перепросмотра</th>
      <th scope="col">Картинка</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <td><%=link_to card.original_text, card%></td>
      <td><%=card.translated_text%></td>
      <td><%=card.review_date.strftime(("%d/%m/%Y"))%></td>
      <%if card.image?%>
        <td><%= image_tag card.image.url(:super_small), class:'image-index' if card.image? %></td>
      <%else%>
        <td>Отсутствует</td>
      <%end%>
    </tr>
    </tbody>
  </table>
  <%= link_to 'Удалить карточку',card_path(card), method: :delete, class: 'btn btn-primary' %>
  <%= link_to 'Редактировать',edit_card_path(card), class: 'btn btn-primary'%>
  <br>
  <br>
<%end%>